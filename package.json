{
  "name": "wep-dashboard",
  "version": "1.1.2",
  "scripts": {
    "ng": "ng",
    "start": "node dist/wep-dashboard/server/server.mjs",
    "build": "ng build --configuration production --optimization=true --source-map=false --output-hashing=all --aot",
    "build:ssr": "ng build --configuration production --optimization=true --source-map=false --output-hashing=all --aot && ng run wep-dashboard:server:production",
    "build:ssr:ci": "npm run build:client && NG_PRERENDER=true PORT=0 npm run build:server",
    "build:client": "ng build --configuration production",
    "build:server": "ng run wep-dashboard:server:production",
    "build:breeze": "ng build --configuration breeze",
    "build:deploy": "ng build --configuration deploy",
    "build:staging": "ng build --configuration staging",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:wep-dashboard": "node dist/wep-dashboard/server/server.mjs",
    "docker:build": "docker build -t wep-admin .",
    "docker:run": "docker run -p 4004:4004 --name wep-admin wep-admin",
    "docker:logs": "docker logs -f wep-admin",
    "docker:test": "docker run -p 4004:4004 --rm wep-admin"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-browser-dynamic": "^20.3.15",
    "@angular/platform-server": "^20.3.15",
    "@angular/router": "^20.3.15",
    "@angular/ssr": "^20.3.13",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@jsverse/transloco": "^7.6.1",
    "@primeng/themes": "^19.1.2",
    "express": "^4.18.2",
    "primeicons": "^7.0.0",
    "primeng": "^20.4.0",
    "rxjs": "~7.8.0",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.13",
    "@angular/cli": "^20.3.13",
    "@angular/compiler-cli": "^20.3.15",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.3",
    "retry": "^0.13.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3"
  }
}